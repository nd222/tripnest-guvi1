<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee" 
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" 
         version="3.0">

    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>

    <servlet>
        <servlet-name>BusBookingServlet</servlet-name>
        <servlet-class>com.busfinder.BusBookingServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>BusBookingServlet</servlet-name>
        <url-pattern>/BusBookingServlet</url-pattern>
    </servlet-mapping>

    <error-page>
        <error-code>404</error-code>
        <location>/buserror.jsp</location>
    </error-page>
</web-app>
